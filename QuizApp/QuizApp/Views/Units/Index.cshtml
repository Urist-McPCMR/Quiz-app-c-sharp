@model IEnumerable<QuizApp.Models.Unit>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Course.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btnEdit" }) |
            @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btnView" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btnDel" })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink(" Create New ", "Create", null, new { @class = "btn btn-info btn-sm;glyphicon glyphicon-plus" })
</p>