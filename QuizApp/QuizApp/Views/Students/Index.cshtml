@model IEnumerable<QuizApp.Models.Student>

@{
    ViewBag.Title = "List of Students";
}

<h2>Students</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>Options</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Course.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.StudentID }, new { @class = "btnEdit" }) |
            @Html.ActionLink("Details", "Details", new { id = item.StudentID }, new { @class = "btnView" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.StudentID }, new { @class = "btnDel" })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink(" Add Student ", "Create", null, new { @class = "btn btn-info btn-sm;glyphicon glyphicon-plus" })
</p>
